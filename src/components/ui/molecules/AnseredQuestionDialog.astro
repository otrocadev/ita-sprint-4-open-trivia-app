---
import RestartButton from '../atoms/RestartButton.astro'
import NextQuestionButton from '../atoms/NextQuestionButton.astro'
import Placeholder from '../atoms/Placeholder.astro'
import { Icon } from 'astro-icon/components'
---

<section
  id="answered-question-dialog"
  class="absolute top-0 left-0 w-full h-full z-10 backdrop-blur-sm bg-black/50 hidden"
>
  <div class="flex items-center justify-center h-full w-full">
    <article
      id="card-dialog"
      class="text-gray-900 p-24 border-2 border-gray-900 rounded-2xl gap-4 items-center justify-center grid grid-cols-3"
    >
      <Icon
        class="col-span-1 w-full h-full hidden"
        name="headstone"
        id="headstone-icon"
      />
      <Icon
        class="col-span-1 w-full h-full hidden"
        name="confetti"
        id="confetti-icon"
      />
      <Icon
        class="col-span-1 w-full h-full hidden"
        name="cross"
        id="cross-icon"
      />
      <section class="col-span-2 flex-col gap-8 items-center justify-center">
        <div id="endgame-info" class="hidden flex-col gap-4">
          <span class="text-4xl flex items-center text-center gap-2"
            >I am afraid this is the end for you...</span
          >
          <span class="flex items-center justify-center gap-2 text-xl"
            >Looks like you have run out of lives <Icon
              class="w-12 h-12"
              name="broken_heart"
            /></span
          >
        </div>
        <div
          id="correct-answer-info"
          class="hidden flex-col gap-4 justify-center items-center"
        >
          <span class="text-4xl">You responded correctly</span>
          <span class="flex flex-col items-center gap-2 text-xl"
            ><p class="text-center" id="random-compliment"></p>
            <Placeholder>
              + 100
              <Icon name="coin" />
            </Placeholder>
          </span>
        </div>
        <div
          id="incorrect-answer-info"
          class="hidden flex-col gap-4 justify-center items-center"
        >
          <span class="text-4xl">You responded incorrectly</span>
          <span class="flex flex-col items-center gap-2 text-xl">
            <p class="text-center" id="failed-question-feed-back"></p>
            <Placeholder>
              - 1
              <Icon name="broken_heart" />
            </Placeholder>
          </span>
        </div>
        <div class="flex justify-center items-center gap-4 mt-8">
          <RestartButton />
          <NextQuestionButton />
        </div>
      </section>
    </article>
  </div>
</section>
